<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/borda_caixa_texto"
        android:drawableRight="@drawable/ic_baseline_person"
        android:hint="Insira seu nome"
        android:inputType="textPersonName"
        android:padding="20dp"
        android:textSize="20sp" />

    <EditText
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/borda_caixa_texto_email"
        android:drawableRight="@drawable/ic_baseline_mail"
        android:hint="Insira seu e-mail"
        android:inputType="textEmailAddress"
        android:padding="20dp"
        android:textSize="20sp" />



</LinearLayout>